<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="ChatClient" status="warn">
	<Properties>
		<Property name="log4j2.level">debug</Property>
	</Properties>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="[%t] %-5p %c %M - %m%n"/>
		</Console>
	</Appenders>
	<Loggers>
		<Root level="${sys:log4j2.level}">
			<AppenderRef ref="STDOUT"/>
		</Root>
	</Loggers>
</Configuration>